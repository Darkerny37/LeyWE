<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/burons"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/tvNombreArticuloConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bote de awa"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingEnd="5dp"
            android:text="@string/Cantidad"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            tools:text="@string/Cantidad" />

        <TextView
            android:id="@+id/tvCantidadLevantar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cargando..."
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingEnd="5dp"
            android:text="@string/Load"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            tools:text="@string/Load" />

        <TextView
            android:id="@+id/tvLoadLevantar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cargando..."
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingEnd="7dp"
            android:text="Numero serie"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            tools:text="Numero serie" />

        <TextView
            android:id="@+id/tvNumSerieLevantar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cargando..."
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>